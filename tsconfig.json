{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@constants/*": ["src/constants/*"],
      "@db/*": ["src/db/*"],
      "@logger/*": ["src/logger/*"],
      "@middleware/*": ["src/middleware/*"],
      "@schema/*": ["src/schema/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/services.ts",
    "src/utils.ts",
    "src/logger.ts",
    "src/schema.ts",
    "src/migrateWatchStatus.ts"
  ],
  "exclude": ["node_modules", "tests", "dist"]
}
