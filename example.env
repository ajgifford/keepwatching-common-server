NODE_ENV=development
SERVICE_NAME=keepwatching
PORT=3033
UPLOADS_DIR=\resources\uploads

# Logging
LOG_DIR=\resources\logs
EXPRESS_LOG_DIR=\var\log
PM2_LOG_DIR=\var\log\pm2
LOG_TIMESTAMP_FORMAT=MMM-DD-YYYY HH:mm:ss

# Security
CERT_KEY_PATH=server.key
CERT_PATH=server.crt
SERVICE_ACCOUNT_PATH=service-account-path

# DB Configuration
MYSQL_HOST=localhost
MYSQL_USER=user
MYSQL_PWD=password
MYSQL_DB=database
MYSQL_WAIT_CONNECTIONS=true
MYSQL_CONNECTION_LIMIT=100
MYSQL_QUEUE_LIMIT=0

# Job Schedule
SHOWS_UPDATE_SCHEDULE=0 2 * * *
MOVIES_UPDATE_SCHEDULE='0 1 7,14,21,28 * *
EMAIL_SCHEDULE=0 9 * * 0

# External API
STREAMING_API_KEY=api-key
STREAMING_API_HOST=api-host
TMDB_TOKEN=tmdb-token

# Rate Limits
RATE_LIMIT_TIME_WINDOW=600000
RATE_LIMIT_MAX=100

# Email Configuration
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=KeepWatching <your-email@gmail.com>