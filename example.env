NODE_ENV=development
SERVICE_NAME=keepwatching
PORT=3033
UPLOADS_DIR=\resources\uploads

# Logging
LOG_DIR=\resources\logs
EXPRESS_LOG_DIR=\var\log
PM2_LOG_DIR=\var\log\pm2
LOG_TIMESTAMP_FORMAT=MMM-DD-YYYY HH:mm:ss

# Security
CERT_KEY_PATH=server.key
CERT_PATH=server.crt
SERVICE_ACCOUNT_PATH=service-account-path

# DB Configuration
MYSQL_HOST=localhost
MYSQL_USER=user
MYSQL_PWD=password
MYSQL_DB=database
MYSQL_WAIT_CONNECTIONS=true
MYSQL_CONNECTION_LIMIT=100
MYSQL_QUEUE_LIMIT=0

# Job Schedule
SHOWS_UPDATE_SCHEDULE=0 2 * * *
MOVIES_UPDATE_SCHEDULE='0 1 7,14,21,28 * *
PERSON_UPDATE_SCHEDULE=0 3 * * *
EMAIL_SCHEDULE=0 9 * * 0
PERFORMANCE_ARCHIVE_SCHEDULE=50 23 * * *

# External API
STREAMING_API_KEY=api-key
STREAMING_API_HOST=api-host
TMDB_TOKEN=tmdb-token

# Rate Limits
RATE_LIMIT_TIME_WINDOW=600000
RATE_LIMIT_MAX=100

# Email Configuration
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=KeepWatching <your-email@gmail.com>

# Activity Tracking Configuration
ACTIVITY_TRACKING_ENABLED=true
ACTIVITY_TRACKING_THROTTLE_MINUTES=5

# Redis Configuration (for stats storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
STATS_STORE_TYPE=redis

# Performance Metrics Retention Policy
# How long to keep detailed metrics (in days) - default: 10 days
PERFORMANCE_DETAILED_RETENTION_DAYS=10
# How long to keep daily summaries (in days) - default: 90 days
PERFORMANCE_SUMMARY_RETENTION_DAYS=90
